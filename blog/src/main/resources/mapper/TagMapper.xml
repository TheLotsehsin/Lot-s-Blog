<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lot.blog.dao.TagDao">

    <!--每个Tag类保存自己标签内的blog数（List<blogs>）-->
    <resultMap id="tags" type="com.lot.blog.entity.Tag">
        <id property="id" column="tid"/>
        <result property="name" column="name"/>
        <collection property="blogList" ofType="Blog">
            <id property="id" column="bid"/>
            <result property="title" column="title"/>
        </collection>
    </resultMap>

    <select id="getIndexTag" resultMap="tags">
        select t.id tid,t.name,b.id bid,b.title from `t_tag` t,`t_blog` b,`t_blog_tag` bt
        where b.published = true and  bt.blog_id = b.id and bt.tag_id = t.id order by tid desc limit 6
    </select>

    <select id="getIndexTag1" resultMap="tags">
        select t.id tid,t.name,b.id bid,b.title from `t_tag` t,`t_blog` b,`t_blog_tag` bt
        where b.published = true and bt.blog_id = b.id and bt.tag_id = t.id
    </select>

    <insert id="saveTag" parameterType="Tag">
        insert into `t_tag`(id,name) values(#{id},#{name})
    </insert>

    <select id="getTagByName" resultType="Tag">
        select * from `t_tag` where  name=#{name}
    </select>

    <select id="getTag" resultType="Tag">
        select * from `t_tag` where  id=#{id}
    </select>

    <select id="getAllTag" resultType="Tag">
        select * from `t_tag`
    </select>

    <update id="updateTag" parameterType="Tag">
       update `t_tag` set name=#{name} where id=#{id}
    </update>

    <delete id="deleteTag">
        delete from `t_tag` where id=#{id}
    </delete>

</mapper>